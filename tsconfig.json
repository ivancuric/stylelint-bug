{
  "include": ["src", "addons"],
  "exclude": ["src/stories"],
  "compilerOptions": {
    "outDir": "dist",
    "module": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "lib": ["es2018", "es6", "dom"],
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": "src"
  }
}
